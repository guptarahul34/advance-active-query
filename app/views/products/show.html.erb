<h1>On product show page display total count order of that particuler product</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total Price</th>
      <th scope="col">Status</th>
      <th scope="col">Product Id</th>
    </tr>
  </thead>
  <tbody>
  <% @orders_id.each do |order_id| %>
    <tr>
      <th scope="row"><%= order_id.id %></th>
      <td><%= order_id.quantity %></td>
      <td><%= order_id.total_price %></td>
      <td><%= order_id.status %></td>
      <td><%= order_id.product_id %></td>
    </tr>
    <% end %>
  </tbody>
</table>
