<h1 class="text-success text-center m-4"> Customers Data </h1>
<%= link_to "Add Customer", new_customer_path, class:"btn btn-primary m-4" %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <%   @customers.each do |customer| %>
    <tr>
      <th scope="row"><%= customer.id %></th>
      <td><%= customer.fname %></td>
      <td><%= customer.lname %></td>
      <td><%= customer.email %></td>
      <td><%= customer.phone %></td>
      <td><%= link_to "Show", customer_path(customer.id), class:"btn btn-primary" %></td>
      <td><%= link_to "Edit", edit_customer_path(customer.id), class:"btn btn-success" %></td>
      <td><%= link_to "Delete", customer_path(customer.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
