<div class="container">
     <%= form_with model: customer  do |form| %>
            <div class="row justify-content-center">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :fname %>
                                <%= form.text_field :fname, class:"form-control" %>
                           </div>      
                </div>
            </div>
                    <% customer.errors.full_messages_for(:fname).each do |message| %>
                        <p class="text-center text-danger"><%= message %></p>
                    <% end %>
            <div class="row justify-content-center mt-2">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :lname %>
                                <%= form.text_field :lname, class:"form-control" %>
                           </div>      
                </div>
            </div>
                    <% customer.errors.full_messages_for(:lname).each do |message| %>
                        <p class="text-center text-danger"><%= message %></p>
                    <% end %>
            <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :email %>
                                <%= form.text_field :email, class:"form-control" %>
                           </div>      
                </div>
            </div>
                        <% customer.errors.full_messages_for(:email).each do |message| %>
                          <p class="text-center text-danger"><%= message %></p>
                        <% end %>
            <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :phone %>
                                <%= form.number_field :phone, class:"form-control" %>
                           </div>      
                </div>
            </div>
                    <% customer.errors.full_messages_for(:phone).each do |message| %>
                        <p class="text-center text-danger"><%= message %></p>
                    <% end %>
            <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.submit "Save Customer", class:"btn btn-success" %>
                           </div>      
                </div>
            </div>

     <% end %>
</div>
