<div class="container">
     <%= form_with model: order  do |form| %>
            <div class="row justify-content-center">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :quantity %>
                                <%= form.text_field :quantity, class:"form-control" %>
                           </div>      
                </div>
            </div>

             <div class="row justify-content-center">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :total_price %>
                                <%= form.number_field :total_price, class:"form-control" %>
                           </div>      
                </div>
            </div>
            
            <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :customer_id, "Customer id" %>
                                <%= form.select :customer_id, @customers.map { |customer| [customer.fname, customer.id] },{}, class:"form-control" %>
                           </div>      
                </div>
            </div>

           <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :product_id, "Product id" %>
                                <%= form.select :product_id, @products.map { |product| [product.title, product.id] },{}, class:"form-control" %>
                           </div>      
                </div>
            </div>
            
            <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.label :status %>
                                <%= form.select :status, Order.statuses.keys, {}, class:"form-control" %>
                           </div>      
                </div>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col-lg-3">
                          <div class="form-group">
                                <%= form.submit "Save Order", class:"btn btn-success" %>
                           </div>      
                </div>
            </div>

     <% end %>
</div>
