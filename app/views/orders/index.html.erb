
<h1 class="text-success text-center m-4">Display Orders</h1>
<%= link_to "Add Order", new_order_path, class:"btn btn-primary m-4" %>

<div class="row">
    <div class="col-lg-4">
          <div class="form-group">
                <%= form_tag("/orders/name", method: "post") do %>
                      <%= text_field_tag :search_by_name %>
                      <%= submit_tag("search") %>
                <% end %>
          </div>
    </div>
</div>


<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id </th>
      <th scope="col">Quantity</th>
      <th scope="col">Total Price</th>
      <th scope="col">Status</th>
      <th scope="col">Customer Id</th>
      <th scope="col">Product ID</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <%  @orders.each do |order| %>
    <tr>
      <th scope="row"> <%= order.id %> </th>
      <td><%= order.quantity %></td>
      <td><%= order.total_price %></td>
      <td><%= order.status %></td>
      <td><%= order.customer_id %></td>
      <td><%= order.product_id %></td>
      <td><%= link_to "Show", order_path(order.id), class:"btn btn-success"  %></td>
      <td> <%= link_to "Edit", edit_order_path(order.id), class:"btn btn-primary" %> </td>
      <td><%= link_to "Delete", order_path(order.id), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1 class="text-center m-5"> Display customer record on order page </h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <th scope="row"><%= customer.id %></th>
      <td><%= customer.fname %></td>
      <td><%= customer.lname %></td>
      <td><%= customer.email %></td>
      <td><%= customer.phone %></td>
    </tr>   
    <% end %>
  </tbody>
</table>
